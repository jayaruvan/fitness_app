<div style="margin-top: 2em" class="d-flex justify-content-center align-items-center container">
    <div class="row" >
        <form class="form" action="/register" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password1">
            </div>
            <div class="form-group">
                <label for="password2">Repeat password</label>
                <input type="password" class="form-control" id="password2" placeholder="Password" name="password2">
            </div>                    
            <button type="submit" class="btn btn-primary">Sign in</button>            
        </form>    
    </div>
</div>
<div>
    <div>
        {{#if emailTaken}}
    
        <div style="margin-top: 1em" class="alert alert-danger alert-dismissible fade show w-25 p-3 d-flex justify-content-center align-items-center container" role="alert">
            <strong>Email is already taken!</strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
    </div>
    <div>    
        {{#if passwordsNotMatch}}
    
        <div style="margin-top: 1em" class="alert alert-danger alert-dismissible fade show w-25 p-3 d-flex justify-content-center align-items-center container" role="alert">
            <strong>Passwords do not match!</strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
    </div>
    <div>
        {{#if validEmail}}
        
        <div style="margin-top: 1em" class="alert alert-danger alert-dismissible fade show w-25 p-3 d-flex justify-content-center align-items-center container" role="alert">
            <strong>Invalid email!</strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
    </div>
    <div>
        {{#if validPassword}}
        
        <div style="margin-top: 1em" class="alert alert-danger alert-dismissible fade show w-25 p-3 d-flex justify-content-center align-items-center container" role="alert">
            <strong>Password needs to be at least 6 characters long!</strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
    </div>
</div>
